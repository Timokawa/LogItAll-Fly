<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crotello.logitall_fly">

    <uses-sdk
        android:maxSdkVersion="24"
        android:minSdkVersion="19"
        android:targetSdkVersion="24"></uses-sdk>


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FlightListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                /
            </intent-filter>
        </activity>
        <activity android:name=".editFlight"></activity>
        <activity
            android:name=".ModifyFlightActivity"
            android:label="Modify Flight"></activity>

    </application>

</manifest>